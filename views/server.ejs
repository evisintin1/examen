      <figure class="text-center">
        <p class="h2">Videoclub Visintin</p>
        <p class="h5">Un videoclub donde encontraras muchas peliculas, de todos los generos y epocas</p>
      </figure>
      <div class="container">

        <% for(var item in peliculas){ %>
          <% if(peliculas[item].disponible){ %>
            <div class="row align-items-start">
              <div class="col">
                  <div class="card" style="width: 18rem;">
                      <img width="300px" src="<%= peliculas[item].img %>" class="card-img-top responsive" alt="...">
                      <div class="card-body">
                          <h5 class="card-title"><%=  peliculas[item].nombre %></h5>
                      </div>
                      <ul class = "list-group list-group-flush">
                          <li class="list-group-item">genero: <%= peliculas[item].genero %></li>
                          <li class="list-group-item">Director: <%= peliculas[item].Director%></li>
                          <li class="list-group-item">Disponible: <%= peliculas[item].Disponible %></li>
                      </ul>
                  </div>
              </div>
          <% } else{ %>
            <div class="row align-items-start">
              <div class="col">
                  <div class="card" style="width: 18rem;">
                      <img width="300px" src="<%= peliculas[item].img %>" class="card-img-top card2 responsive" alt="...">
                      <style>.card2 {filter: grayscale(80%);}</style>
                      <div class="card-body">
                          <h5 class="card-title"><%=  peliculas[item].nombre %></h5>
                      </div>
                      <ul class = "list-group list-group-flush">
                          <li class="list-group-item">genero: <%= peliculas[item].genero %></li>
                          <li class="list-group-item">Director: <%= peliculas[item].Director %></li>
                          <li class="list-group-item">disponible: <%= peliculas[item].disponible %></li>
                      </ul>
                  </div>
              </div>
          <% } %>
